{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": false,
    "baseUrl": ".",
    "paths": {
      "@rig/schema": ["../../packages/schema/dist/index.d.ts"],
      "@rig/schema/*": ["../../packages/schema/dist/*"]
    },

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}

